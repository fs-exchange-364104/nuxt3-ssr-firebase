{
  "name": "nuxt3-ssr-firebase",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "build:firebase": "npm run build -- --preset=firebase",
    "postbuild:firebase": "cp ./service-account.json ./.output/server",
    "preemulator": "npm run build:firebase",
    "emulator": "GOOGLE_APPLICATION_CREDENTIALS=service-account.json firebase emulators:start",
    "predeploy": "npm run build:firebase",
    "deploy": "cp .env.function ./.output/server/.env && npx firebase-tools deploy",
    "clear": "rm -rf .nuxt .output .firebase",
    "clear-all": "rm -rf node_modules package-lock.json .nuxt .output .firebase",
    "upgrade": "npx nuxi upgrade --force",
    "analyze": "npx nuxi analyze"
  },
  "devDependencies": {
    "@firebase/app-types": "^0.9.0",
    "@heroicons/vue": "^2.1.1",
    "@iconify-json/emojione": "^1.1.10",
    "@iconify-json/simple-icons": "^1.1.91",
    "@nuxt/ui": "^2.13.0",
    "@nuxt/ui-pro": "^0.7.5",
    "@nuxtjs/i18n": "^8.1.1",
    "@nuxtjs/sitemap": "^5.1.0",
    "@pinia/nuxt": "^0.5.1",
    "autoprefixer": "^10.4.17",
    "firebase": "^10.6.0",
    "firebase-admin": "^11.11.1",
    "firebase-functions": "^4.7.0",
    "nuxt": "^3.10.3",
    "nuxt-gtag": "^1.2.0",
    "nuxt-vuefire": "^1.0.1",
    "pinia": "^2.1.7",
    "postcss": "^8.4.35",
    "slugify": "^1.6.6",
    "uuid": "^9.0.1",
    "vue": "^3.4.19",
    "vue-router": "^4.2.5",
    "vuefire": "^3.1.22",
    "zod": "^3.22.4"
  }
}
