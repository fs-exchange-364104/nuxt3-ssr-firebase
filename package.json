{
  "name": "nuxt3-ssr-firebase",
  "private": true,
  "type": "module",
  "scripts": {
    "prebuild": "npm run lint",
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "postinstall": "nuxt prepare",
    "build:firebase": "npm run build -- --preset=firebase",
    "preemulator": "npm run build:firebase",
    "emulator": "firebase emulators:start",
    "predeploy": "npm run build:firebase",
    "deploy": "npx firebase-tools deploy",
    "clear": "rm -rf .nuxt .output .firebase",
    "clear-all": "rm -rf node_modules package-lock.json .nuxt .output .firebase",
    "upgrade": "npx npm-check-updates -u && npm i",
    "upgrade:nuxi": "npx nuxi upgrade --force",
    "analyze": "npx nuxi analyze"
  },
  "devDependencies": {
