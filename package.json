{
  "name": "nuxt-app",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "build:firebase": "NITRO_PRESET=firebase nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "prehosting": "npm run clear.hosting",
    "postupgrade": "npm run reinstall",
    "prereinstall": "npm run clear-all",
    "reinstall": "npm --prefix functions/modules run install && npm --prefix functions/modules run build && npm install",
    "build-all": "npm run build.modules && npm run build.function",
    "build.modules": "npm --prefix functions/modules run build",
    "build.function": "npm --prefix functions run build",
    "deploy": "npx firebase-tools deploy",
    "clear": "npm run clear.firebase && npm --prefix functions/modules run clear && npm --prefix functions run clear",
    "clear.hosting": "rm -rf public .firebase",
    "upgrade": "npx npm-check-updates -u &&  npm --prefix functions/modules run upgrade",
    "clear-all": "npm run clear.hosting && npm --prefix functions/modules run clear-all && npm --prefix functions run clear-all",
    "postclear-all": "rm -rf node_modules package-lock.json .nuxt .output"
  },
  "devDependencies": {
    "@firebase/app-types": "^0.9.0",
    "@heroicons/vue": "^2.1.1",
    "@iconify-json/emojione": "^1.1.10",
    "@iconify-json/simple-icons": "^1.1.90",
    "@nuxt/ui": "^2.13.0",
    "@nuxt/ui-pro": "^0.7.5",
    "@nuxtjs/i18n": "^8.0.1",
    "@pinia/nuxt": "^0.5.1",
    "@types/jest": "^29.5.12",
    "defu": "^6.1.4",
    "firebase": "^10.8.0",
    "firebase-functions": "^4.6.0",
    "jest": "^29.7.0",
    "jwt-decode": "^4.0.0",
    "nuxt": "^3.10.0",
    "nuxt-gtag": "^1.1.2",
    "nuxt-vuefire": "^1.0.1",
    "pinia": "^2.1.7",
    "rxjs": "^7.8.1",
    "ts-jest": "^29.1.2",
    "uuid": "^9.0.1",
    "vue": "^3.4.15",
    "vue-material-design-icons": "^5.3.0",
    "vue-router": "^4.2.5",
    "vuefire": "^3.1.22",
    "zod": "^3.22.4"
  }
}
