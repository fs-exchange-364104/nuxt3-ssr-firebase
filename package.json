{
  "name": "nuxt3-ssr-firebase",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "build:firebase": "npm run build -- --preset=firebase && cp ./service-account.json ./.output/server",
    "preemulator": "npm run build:firebase",
    "emulator": "GOOGLE_APPLICATION_CREDENTIALS=service-account.json firebase emulators:start",
    "predeploy": "npm run build:firebase",
    "deploy": "cp .env.function ./.output/server/.env && npx firebase-tools deploy",
    "clear": "rm -rf .nuxt .output .firebase",
    "clear-all": "rm -rf node_modules package-lock.json .nuxt .output .firebase",
    "upgrade": "npx npm-check-updates -u && npm i",
    "upgrade:nuxi": "npx nuxi upgrade --force",
    "analyze": "npx nuxi analyze"
  },
  "devDependencies": {
    "@firebase/app-types": "^0.9.0",
    "@heroicons/vue": "^2.1.1",
    "@iconify-json/emojione": "^1.1.10",
    "@iconify-json/simple-icons": "^1.1.95",
    "@nuxt/ui": "^2.14.2",
    "@nuxt/ui-pro": "^1.0.2",
    "@nuxtjs/i18n": "^8.1.1",
    "@nuxtjs/sitemap": "^5.1.2",
    "@pinia/nuxt": "^0.5.1",
    "@types/uuid": "^9.0.8",
    "autoprefixer": "^10.4.18",
    "country-state-city": "^3.2.1",
    "firebase": "^10.8.1",
    "firebase-admin": "^11.11.1",
    "firebase-functions": "^4.8.0",
    "nuxt": "^3.10.3",
    "nuxt-gtag": "^2.0.5",
    "nuxt-vuefire": "^1.0.2",
    "pinia": "^2.1.7",
    "postcss": "^8.4.35",
    "slugify": "^1.6.6",
    "uuid": "^9.0.1",
    "vue": "^3.4.21",
    "vue-router": "^4.3.0",
    "vuefire": "^3.1.23",
    "zod": "^3.22.4"
  }
}
